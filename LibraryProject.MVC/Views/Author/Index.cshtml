@using LibraryProject.Backend.Domain.Model

@model List<Author>

<h3>Liste der Autoren</h3>

<table class="table table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>FirstName</td>
            <td>LastName</td>
            <td>Adresse</td>
            <td>BirthDate</td>
            <td>Phonenumber</td>
            <td>Gender</td>
            <td>Email</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Author item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.AddressRecord</td>
            <td>@item.Birthdate</td>
            <td>@item.Gender</td>
            <td>@item.Email</td>
        </tr>
        }
    </tbody>
</table>
